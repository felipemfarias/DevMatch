<%= form_for @profile, url: user_profile_path, :html => { :multipart => true } do |f| %>
 <div class="field">
   <%= f.label :first_name %>
   <%= f.text_field :first_name %>
 </div>
 <div class="field">
   <%= f.label :last_name %>
   <%= f.text_field :last_name %>
 </div>
 <div class="field">
   <%= f.label :avatar %>
   <%= f.file_field :avatar %>
 </div>
 <div class="field">
   <%= f.label :job_title %>
   <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: "ui dropdown" %>
 </div>
 <div class="field">
   <%= f.label :phone_number %>
   <%= f.text_field :phone_number %>
 </div>
 <div class="field">
   <%= f.label :contact_email %>
   <%= f.text_field :contact_email %>
 </div>
 <div class="field">
   <%= f.label :description %>
   <%= f.text_area :description %>
 </div>
 <div class="field">
   <%= f.submit "Update Profile", class: "ui button positive" %>
 </div>
<% end %>